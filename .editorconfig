# EditorConfig
# http://editorconfig.org

# Top Most EditorConfig File
root = true

[*]
# Set Default Character Set
charset = utf-8

# Unix Style Newline With Newline Ending
end_of_line = lf
insert_final_newline = true

# Set Identation Style
indent_style = space

# Remove Whitespace Preceding Newline Character
trim_trailing_whitespace = true

[*.yml]
indent_size = 2

[*.py]
indent_size = 4
